---
layout: layouts/base.njk
---

<article class="max-w-4xl mx-auto px-4 py-8">
  {# Header #}
  <header class="mb-8">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ title }}</h1>

    {# Metadata #}
    <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400 mb-4">
      {% if publishedAt or date %}
      <time datetime="{{ (publishedAt or date) | htmlDateString }}">
        {{ (publishedAt or date) | readableDate }}
      </time>
      {% endif %}

      <span>{{ content | readingTime }}</span>
    </div>

    {# Tags #}
    {% if tags and tags.length > 0 %}
    <div class="flex flex-wrap gap-2 mb-6">
      {% for tag in tags %}
      <a href="/tag/{{ tag | slugify }}/" class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors">
        {{ tag }}
      </a>
      {% endfor %}
    </div>
    {% endif %}

    {# Hero Image #}
    {% if image and image.showAsHeader %}
    <div class="mb-8">
      <img
        src="{{ image.src }}"
        alt="{{ image.alt or title }}"
        width="{{ image.width }}"
        height="{{ image.height }}"
        class="w-full h-auto rounded-lg"
      >
    </div>
    {% endif %}
  </header>

  {# Content #}
  <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-pre:bg-gray-100 dark:prose-pre:bg-gray-800 prose-code:text-pink-600 dark:prose-code:text-pink-400">
    {{ content | safe }}
  </div>

  {# Footer #}
  <footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
    <a
      href="https://github.com/vnglst/koenvangilst.nl/edit/main/src/posts/{{ page.fileSlug }}.md"
      class="text-blue-600 dark:text-blue-400 hover:underline"
      target="_blank"
      rel="noopener noreferrer"
    >
      Edit this page on GitHub
    </a>
  </footer>
</article>
